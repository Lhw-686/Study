{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "g++.exe build active file",
            //"label": "cmd",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-I",
                "D:/vscode/C++/include",
                "-Wall",
                "-Wextra",
                "-save-temps",
                "-static-libgcc",
                "-o",
                //"-I",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
           
        }
    ]
}

